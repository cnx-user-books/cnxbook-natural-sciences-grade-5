        <figure id="id7861964">
          <media id="id7861964_media" alt="">
            <image mime-type="image/png" src="../../media/graphics3-e948.png" id="id7861964__onlineimage" height="241" width="573"/>
          </media>
        </figure>
        <figure id="id7861991">
          <media id="id7861991_media" alt="">
            <image mime-type="image/png" src="../../media/graphics4-e9a9.png" id="id7861991__onlineimage" height="241" width="573"/>
          </media>
